@model QuanLyNhanVien.Models.ChucVu
@{

}
@if (TempData["ThongBao"] != null)
{
    <script type="text/javascript" charset="utf-8">
                        window.onload = function () {
                            alert("@Html.Raw(@TempData["ThongBao"])");
                    };
    </script>
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <form action="/ChucVu/insertChucVu" method="post">
                    <div class="forms-header text-center">
                        <h4 class="forms-title">
                            <b>Thêm chức vụ</b>
                        </h4>
                    </div>
                    <div class="forms-body">
                        <div class="form-group">
                            <label class="m-2">Mã CV</label>
                            <input asp-for="@Model.MaCv" type="text" class="form-control" required>
                        </div>
                        <div class="form-group mb-2">
                            <label class="m-2">Chức vụ</label>
                            <input asp-for="@Model.TenChucVu" type="text" class="form-control" required>
                        </div>

                    </div>
                    <div class="forms-footer d-flex justify-content-between">
                        <a href="/ChucVu/ChucVu" class="btn btn-secondary">Quay lại</a>
                        <input type="submit"
                               class="btn btn-primary"
                               value="Thêm" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>