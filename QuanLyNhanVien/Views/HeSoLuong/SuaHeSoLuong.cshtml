@model QuanLyNhanVien.Models.Dmhsluong
@{

}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <form action="/HeSoLuong/updateHeSoLuong" method="post">
                    <div class="forms-header text-center">
                        <h4 class="forms-title">
                            <b>Sửa hệ số lương</b>
                        </h4>
                    </div>
                    <div class="forms-body">
                        <div class="form-group">
                            <label class="m-2">Mã HSL</label>
                            <input asp-for="@Model.MaHsl" type="text" class="form-control" required readonly>
                            <input asp-for="@Model.Id" type="hidden" class="form-control" required>
                        </div>
                        <div class="form-group mb-2">
                            <label class="m-2">Hệ số lương</label>
                            <input asp-for="@Model.HeSoLuong" type="text" class="form-control" required>
                        </div>

                    </div>
                    <div class="forms-footer d-flex justify-content-end">

                        <input type="submit"
                               class="btn btn-primary"
                               value="Lưu" />
                    </div>
                </form>
                <button class="btn btn-secondary position-absolute" style="margin-top: -38px;"
                        onclick="window.history.go(-1);">
                    Quay lại
                </button>
            </div>
        </div>
    </div>
</div>