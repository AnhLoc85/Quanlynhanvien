@model QuanLyNhanVien.Models.DmmucPhuCap 
@{

}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <form action="/PhuCap/updatePhuCap" method="post">
                    <div class="forms-header text-center">
                        <h4 class="forms-title">
                            <b>Sửa phụ cấp</b>
                        </h4>
                    </div>
                    <div class="forms-body">
                        <div class="form-group">
                            <label class="m-2">Mã PC</label>
                            <input asp-for="@Model.MaPc" type="text" class="form-control" required readonly>
                            <input asp-for="@Model.Id" type="hidden" class="form-control" required>
                        </div>
                        <div class="form-group mb-2">
                            <label class="m-2">Loại phụ cấp</label>
                            <input asp-for="@Model.KhoanPhuCap" type="text" class="form-control" required>
                        </div>
                        <div class="mb-3 col-md-12">
                                <label for="gioitinh" class="form-label">Tính thu nhập cá nhân</label>
                                <select id="gioitinh" class="select2 form-select" name="Tncn">
                                    <option value="@Model.Tncn" selected>@(Model.Tncn ?? false ? "có" : "không")</option>
                                    <option value="true">Có</option>
                                    <option value="false">Không</option>
                                </select>
                            </div>
                            <div class="mb-3 col-md-12">
                                <label for="gioitinh" class="form-label">Tính bảo hiểm</label>
                                <select id="gioitinh" class="select2 form-select" name="Tncn">
                                    <option value="@Model.Bhxh" selected>@(Model.Bhxh ?? false ? "có" : "không")</option>
                                    <option value="true">Có</option>
                                    <option value="false">Không</option>
                                </select>
                            </div>
                    </div>
                    <div class="forms-footer d-flex justify-content-end">
                       
                        <input type="submit"
                               class="btn btn-primary"
                               value="Lưu" />
                    </div>
                </form>
                <button class="btn btn-secondary position-absolute" style="margin-top: -38px;"
                        onclick="window.history.go(-1);">
                    Quay lại
                </button>
            </div>
        </div>
    </div>
</div>