                data: "thoigian=" + thoigian + "&mathuong=" + mathuong + "&tienthuong=" + tienthuong + "&khoanthuong=" + khoanthuong + "&IDQTT=" + idqtt,
                success: function (result) {
                    thiss.parents('tr').replaceWith(result);
                },
                error: function () {
                    alert("Fail");
