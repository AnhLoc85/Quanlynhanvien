        var tienthuong = $("#TT").val();
        $.ajax({
            type: "post",
            url: "/insertQTThuong",
            data: "IdNS=" + idns + "&MaThuong=" + idthuong + "&ThoiGian=" + thoigian + "&TienThuong=" + tienthuong,
            success: function (result) {
